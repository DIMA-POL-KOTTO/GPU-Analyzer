<UserControl x:Class="GPU_Analyzer.Views.StressTestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1"
        Content="Запустить стресс-тест"
        Command="{Binding StartStressTestCommand}"
        Padding="10" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
