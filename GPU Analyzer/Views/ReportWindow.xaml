<Window x:Class="GPU_Analyzer.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPU_Analyzer.Views"
        mc:Ignorable="d"
        Title="Создание отчёта" Height="400" Width="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="175" Text="{Binding SavePath}" Margin="0,0,10,0"/>
            <Button Content="Обзор..." Command="{Binding BrowseCommand}" Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Content="JSON" Command="{Binding GenerateJsonCommand}" Margin="5" />
            <Button Content="XML" Command="{Binding GenerateXmlCommand}" Margin="5"/>
            <Button Content="TXT" Command="{Binding GenerateTxtCommand}" Margin="5"/>
            <Button Content="PDF" Command="{Binding GeneratePdfCommand}" Margin="5"/>
        </StackPanel>

        

    </Grid>
</Window>
