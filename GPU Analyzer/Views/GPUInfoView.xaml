<UserControl x:Class="GPU_Analyzer.Views.GPUInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="8" Orientation="Vertical" >
        

        <!-- Детали выбранного GPU: атрибут : значение -->
        <ContentControl Content="{Binding SelectedGPU}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <Border Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,6" VerticalAlignment="Center" TextWrapping="Wrap" />

                            <TextBlock Text="Выделенная память:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding DedicatedMemory}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,6" VerticalAlignment="Center" />

                            <TextBlock Text="Версия драйвера:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding DriverVersion}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </StackPanel>

</UserControl>